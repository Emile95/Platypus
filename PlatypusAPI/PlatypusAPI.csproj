  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\PlatypusNetwork\PlatypusNetwork.csproj" />
    <ProjectReference Include="..\Utils\PlatypusUtils.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Ressources\Strings.Designer.cs">
